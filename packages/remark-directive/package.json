{
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "bugs": "https://github.com/remarkjs/remark-directive/issues",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {
    "@types/mdast": "^4.0.0",
    "mdast-util-directive": "^3.0.0",
    "@ephys/micromark-extension-directive": "^4.0.0",
    "unified": "^11.0.0"
  },
  "description": "remark plugin to support directives",
  "devDependencies": {
    "@ephys/eslint-config-typescript": "^21.0.1",
    "@types/node": "^22.0.0",
    "c8": "^10.0.0",
    "eslint": "^9.39.2",
    "is-hidden": "^2.0.0",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.0.0",
    "micromark-util-types": "^2.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "remark": "^15.0.0",
    "remark-cli": "^12.0.0",
    "remark-preset-wooorm": "^11.0.0",
    "to-vfile": "^8.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    "default": "./lib/index.js"
  },
  "files": [
    "lib/",
    "src/"
  ],
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "keywords": [
    "container",
    "directive",
    "generic",
    "markdown",
    "mdast",
    "plugin",
    "remark-plugin",
    "remark",
    "unified"
  ],
  "license": "MIT",
  "name": "@ephys/remark-directive",
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm"
    ]
  },
  "repository": "remarkjs/remark-directive",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark --frail --output --quiet -- . && prettier --log-level warn --write -- . && eslint --fix .",
    "prepack": "npm run build && npm run format",
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --100 --reporter lcov -- npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "sideEffects": false,
  "typeCoverage": {
    "atLeast": 100,
    "strict": true
  },
  "type": "module",
  "version": "4.0.1"
}
